    @{
        int score1 = Model.BSRS.Score1;
        int score2 = Model.BSRS.Score2;
        int score3 = Model.BSRS.Score3;
        int score4 = Model.BSRS.Score4;
        int score5 = Model.BSRS.Score5;
        int score6 = Model.BSRS.Score6;
        int score = 0;
        int option = 0;

        score = score1 + score2 + score3 + score4 + score5;

        if (score <= 5)
            option = 1;
        else if (score >= 6 && score <= 9)
            option = 2;
        else if (score >= 10 && score <= 14)
            option = 3;
        else if (score >= 15)
            option = 4;

        if(score6 == 0)
        {
            switch (option)
            {
                case 1 :
                        <p>BSRS(0-5分)for OPD(V2)</p>
                        <p>分數 : @score / @score6</p>
                    break;

                case 2:
                        <p>BSRS(6-9分)for OPD(V2)<br/>
                        您於 @Html.DisplayFor(model => model.BSRS.Time) 自填的「心情溫度計」分數稍高(分數 : @score / @score6)，可能有輕度情緒困擾，建議您找家人、朋友談談心事或尋求諮詢專線，抒發情緒</p>
                    break;

                case 3:
